<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/achievements"
        android:onClick="onAchievementsButtonClicked"/>

    <TextView
        android:id="@+id/information_daily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/steps_daily_show"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/amount_daily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:paddingBottom="15dp"/>

    <TextView
        android:id="@+id/information_since_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/steps_since_restart_show"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/amount_since_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40dp"/>

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_butt"
        android:onClick="onButtonResetClicked"/>
</LinearLayout>