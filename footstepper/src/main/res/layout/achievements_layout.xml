<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/achievement_image_view"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:src="@drawable/locked"/>
        <TextView
            android:id="@+id/achievement_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/achievement_image_view"
            android:layout_toRightOf="@+id/achievement_image_view"
            android:text="Tytuł"/>
        <TextView
            android:id="@+id/achievement_description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/achievement_image_view"
            android:layout_toRightOf="@+id/achievement_image_view"
            android:layout_below="@+id/achievement_title_text_view"
            android:text="Trochę dłuższy opis"/>

    </RelativeLayout>

</LinearLayout>